<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_SELLACIOUS_SEARCH_IN_SHOPRULES"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string inputbox"
		/>
		<field
			name="state"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			filter="*,0,1,-2"
			onchange="this.form.submit();"
			class="inputbox"
		>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="seller_uid"
			type="productsellers"
			label="COM_SELLACIOUS_SHOPRULES_SELECT_SELLER"
			onchange="this.form.submit();"
			class="inputbox"
		>
			<option value="">COM_SELLACIOUS_SHOPRULES_SELECT_SELLER</option>
		</field>
		<field
			name="type"
			type="list"
			label="COM_SELLACIOUS_SHOPRULES_SELECT_TYPE"
			onchange="this.form.submit();"
			class="inputbox"
		>
			<option value="">COM_SELLACIOUS_SHOPRULES_SELECT_TYPE</option>
			<option value="tax">COM_SELLACIOUS_SHOPRULE_OPTION_TAX</option>
			<option value="discount">COM_SELLACIOUS_SHOPRULE_OPTION_DISCOUNT</option>
			<!--<option value="shipping">Shipping</option>
			<option value="packaging">Packaging</option>-->
		</field>
		<field
			name="level"
			type="integer"
			first="1"
			last="10"
			step="1"
			label="JOPTION_FILTER_LEVEL"
			languages="*"
			description="JOPTION_FILTER_LEVEL_DESC"
			onchange="this.form.submit();"
			class="inputbox"
		>
			<option value="">JOPTION_SELECT_MAX_LEVELS</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="groupedlist"
			label="JGLOBAL_SORT_BY"
			statuses="*,0,1,2,-2"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.lft ASC"
			class="inputbox"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<group name="ASC" label="COM_SELLACIOUS_SORT_ASCENDING">
				<option value="a.lft ASC">JGRID_HEADING_ORDERING_ASC</option>
				<option value="a.state ASC">JSTATUS_ASC</option>
				<option value="a.title ASC">JGLOBAL_TITLE_ASC</option>
				<option value="a.type ASC">COM_SELLACIOUS_SHOPRULE_FIELD_TYPE_ASC</option>
				<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
				<option value="a.amount ASC">JGRID_HEADING_AMOUNT_ASC</option>
				<option value="a.publish_down ASC">JGRID_HEADING_END_DATE_ASC</option>
			</group>
			<group name="DESC" label="COM_SELLACIOUS_SORT_DESCENDING">
				<option value="a.lft DESC">JGRID_HEADING_ORDERING_DESC</option>
				<option value="a.state DESC">JSTATUS_DESC</option>
				<option value="a.title DESC">JGLOBAL_TITLE_DESC</option>
				<option value="a.type DESC">COM_SELLACIOUS_SHOPRULE_FIELD_TYPE_DESC</option>
				<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
				<option value="a.amount DESC">JGRID_HEADING_AMOUNT_DESC</option>
				<option value="a.publish_down DESC">JGRID_HEADING_END_DATE_DESC</option>
			</group>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini inputbox"
			default="20"
			label="JGLOBAL_LIST_LIMIT"
			description="JGLOBAL_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
