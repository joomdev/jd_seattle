			name="fee_amount"
			type="money"
			label="COM_SELLACIOUS_SPLCATEGORY_FIELD_FEEAMOUNT_LABEL"
			description="COM_SELLACIOUS_SPLCATEGORY_FIELD_FEEAMOUNT_DESC"
			class="inputbox"
			default="0"
			validate="money"
			sign="GEZ"
			filter="float"
		/>
