			type="editor"
			label="COM_SELLACIOUS_SPLCATEGORY_FIELD_DESCRIPTION_LABEL"
			description="COM_SELLACIOUS_SPLCATEGORY_FIELD_DESCRIPTION_DESC"
			width="580"
			height="20"
			filter="safehtml"
			class="inputbox"
		/>
		<field
			name="created_by"
			type="hidden"
			filter="unset"
			/>
		<field
