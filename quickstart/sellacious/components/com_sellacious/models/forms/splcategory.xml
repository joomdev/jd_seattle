			type="text"
			label="COM_SELLACIOUS_SPLCATEGORY_FIELD_TITLE_LABEL"
			description="COM_SELLACIOUS_SPLCATEGORY_FIELD_TITLE_DESC"
			class="inputbox"
			size="40"
			required="true"
		/>
		<field
			name="alias"
			type="text"
			label="COM_SELLACIOUS_SPLCATEGORY_FIELD_ALIAS_LABEL"
