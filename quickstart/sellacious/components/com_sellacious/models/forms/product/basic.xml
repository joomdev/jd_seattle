<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic" label="COM_SELLACIOUS_PRODUCT_FIELDSET_BASIC">
		<field
			name="categories"
			type="categoryList"
			label="COM_SELLACIOUS_PRODUCT_FIELD_CATEGORY_LABEL"
			description="COM_SELLACIOUS_PRODUCT_FIELD_CATEGORY_DESC"
			class="inputbox w75p"
			required="false"
			multiple="true"
			show_all="true"
			translate="true"
			group=""
			onchange="Joomla.submitbutton('product.setCategory');"
		/>
	</fieldset>
	<fieldset name="basic" label="COM_SELLACIOUS_PRODUCT_FIELDSET_BASIC">
		<fields name="basic">
			<field
				name="title"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_FIELD_TITLE_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_TITLE_DESC"
				class="inputbox w75p"
				required="true"
				autocomplete="off"
				/>
			<field
				name="parent_id"
				type="product"
				label="COM_SELLACIOUS_PRODUCT_FIELD_PARENT_ID_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_PARENT_ID_DESC"
				class="w75p"
				autocomplete="off"
			/>
			<field
				name="manufacturer_id"
				type="manufacturer"
				label="COM_SELLACIOUS_PRODUCT_FIELD_MANUFACTURER_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_MANUFACTURER_DESC"
				class="inputbox w75p"
				default=""
				>
				<option value="">COM_SELLACIOUS_PRODUCT_FIELD_OPTION_SELECT_MANUFACTURER</option>
			</field>
			<field
				name="local_sku"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_FIELD_LOCAL_SKU_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_LOCAL_SKU_DESC"
				class="inputbox w40p"
				validate="sku"
				/>
			<field
				name="manufacturer_sku"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_FIELD_MFR_SKU_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_MFR_SKU_DESC"
				class="inputbox w40p"
				/>
			<field
				name="features"
				type="textboxes"
				label="COM_SELLACIOUS_PRODUCT_FIELD_FEATURES_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_FEATURES_DESC"
				rows="5"
				class="inputbox w75p"
				/>
			<field
				name="introtext"
				type="textarea"
				label="COM_SELLACIOUS_PRODUCT_FIELD_INTROTEXT_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_INTROTEXT_DESC"
				rows="6"
				class="textarea w75p"
				filter="string"
				/>
			<field
				name="description"
				type="editor"
				label="COM_SELLACIOUS_PRODUCT_FIELD_DESCRIPTION_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_DESCRIPTION_DESC"
				class="textarea w75p"
				filter="safehtml"
				editor=""
				rows="10"
				/>
			<field
				name="primary_image"
				type="uploader"
				label="COM_SELLACIOUS_PRODUCT_FIELD_PRIMARY_IMAGE_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_PRIMARY_IMAGE_DESC"
				tableName="products"
				context="primary_image"
				recordId="0"
				uploadLimit="1"
				maxSize="5 MB"
				extensions="jpg,png,jpeg,gif"
				showPublish="false"
				showRename="true"
				showRemove="true"
			/>
			<field
				name="primary_video_url"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_FIELD_PRIMARY_VIDEO_URL_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_PRIMARY_VIDEO_URL_DESC"
				class="inputbox w75p validate-primary_video"
			/>
			<field
				name="address"
				type="mapaddress"
				label="COM_SELLACIOUS_PRODUCT_FIELD_ADDRESS_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_ADDRESS_DESC"
				class="inputbox medium-input"
				autocomplete="off"
			/>
			<field
				name="location"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_FIELD_LOCATION_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_LOCATION_DESC"
				class="inputbox medium-input"
				filter="string"
			/>
			<field
				name="images"
				type="uploader"
				label="COM_SELLACIOUS_PRODUCT_FIELD_IMAGES_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_IMAGES_DESC"
				tableName="products"
				context="images"
				recordId="0"
				uploadLimit="0"
				maxSize="5 MB"
				extensions="jpg,png,jpeg,gif"
				showPublish="false"
				showRename="true"
				showRemove="true"
			/>
			<field
				name="attachments"
				type="uploader"
				label="COM_SELLACIOUS_PRODUCT_FIELD_ATTACHMENTS_LABEL"
				description="COM_SELLACIOUS_PRODUCT_FIELD_ATTACHMENTS_DESC"
				tableName="products"
				context="attachments"
				recordId="0"
				uploadLimit="0"
				maxSize="20 MB"
				extensions="jpg,png,jpeg,gif,doc,docx,xls,xlsx,ppt,pptx,pdf,txt"
				showPublish="false"
				showRename="true"
				showRemove="true"
				/>
			/>
			<fields name="geolocation">
				<field
					type="hidden"
					name="zip"
					default=""
				/>
				<field
					type="hidden"
					name="sublocality"
					default=""
				/>
				<field
					type="hidden"
					name="locality"
					default=""
				/>
				<field
					type="hidden"
					name="city"
					default=""
				/>
				<field
					type="hidden"
					name="district"
					default=""
				/>
				<field
					type="hidden"
					name="state"
					default=""
				/>
				<field
					type="hidden"
					name="country"
					default=""
				/>
			</fields>
		</fields>
	</fieldset>
</form>
