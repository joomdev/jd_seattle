<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic" label="COM_SELLACIOUS_PRODUCT_BUTTON_FIELDSET_BASIC">
		<field
			name="id"
			type="hidden"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			readonly="true"
			class="readonly"
		/>
		<field
			name="title"
			type="text"
			title="COM_SELLACIOUS_PRODUCT_BUTTON_TITLE_LABEL"
			description="COM_SELLACIOUS_PRODUCT_BUTTON_TITLE_LABEL"
			class="inputbox"
		/>
		<fields name="params">
			<field
				name="checkout"
				type="radio"
				label="COM_SELLACIOUS_PRODUCT_BUTTON_CHECKOUT_LABEL"
				description="COM_SELLACIOUS_PRODUCT_BUTTON_CHECKOUT_DESC"
				class="button-param inputbox field-checkout"
				default="true"
				required="true">
				<option value="true">COM_SELLACIOUS_PRODUCT_BUTTON_CHECKOUT_OPTION_BUY_NOW</option>
				<option value="false">COM_SELLACIOUS_PRODUCT_BUTTON_CHECKOUT_OPTION_ADD_TO_CART</option>
			</field>
			<field
				name="product_type"
				type="hidden"
				label="COM_SELLACIOUS_PRODUCT_BUTTON_PRODUCT_TYPE_LABEL"
				description="COM_SELLACIOUS_PRODUCT_BUTTON_PRODUCT_TYPE_DESC"
				class="button-param inputbox"
				default="physical"
			/>
			<field
				name="product_title"
				filter="string"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_BUTTON_PRODUCT_TITLE_LABEL"
				description="COM_SELLACIOUS_PRODUCT_BUTTON_PRODUCT_TITLE_DESC"
				class="button-param inputbox medium-input"
				required="true"
			/>
			<field
				name="product_sku"
				filter="string"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_BUTTON_PRODUCT_SKU_LABEL"
				description="COM_SELLACIOUS_PRODUCT_BUTTON_PRODUCT_SKU_DESC"
				class="button-param inputbox medium-input"
				required="true"
			/>
			<field
				name="flat_price"
				filter="string"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_BUTTON_FLAT_PRICE_LABEL"
				description="COM_SELLACIOUS_PRODUCT_BUTTON_FLAT_PRICE_DESC"
				class="button-param inputbox tiny-input text-left"
				required="true"
			/>
		</fields>
	</fieldset>
	<fieldset name="advanced" label="COM_SELLACIOUS_PRODUCT_BUTTON_FIELDSET_EXTRA">
		<fields name="params">
			<field
				name="currency"
				filter="string"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_BUTTON_CURRENCY_LABEL"
				description="COM_SELLACIOUS_PRODUCT_BUTTON_CURRENCY_DESC"
				class="button-param inputbox tiny-input text-left"
				maxlength="3"
			/>
			<field
				name="flat_shipping"
				type="radio"
				label="COM_SELLACIOUS_PRODUCT_BUTTON_FLAT_SHIPPING_LABEL"
				description="COM_SELLACIOUS_PRODUCT_BUTTON_FLAT_SHIPPING_DESC"
				class="button-param inputbox"
				default="1">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field
				name="shipping_fee"
				filter="string"
				type="text"
				label="COM_SELLACIOUS_PRODUCT_BUTTON_SHIPPING_FEE_LABEL"
				description="COM_SELLACIOUS_PRODUCT_BUTTON_SHIPPING_FEE_DESC"
				class="button-param inputbox tiny-input text-left"
			/>
		</fields>
	</fieldset>
</form>
