<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="client">
		<fieldset name="client" label="COM_SELLACIOUS_PROFILE_FIELDSET_CLIENT">
			<field
				name="id"
				type="hidden"
			/>
			<field
				name="client_type"
				type="clientType"
				label="COM_SELLACIOUS_PROFILE_FIELD_CLIENT_TYPE_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_CLIENT_TYPE_DESC"
				class="medium-input"
			/>
			<field
				name="business_name"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_BUSINESS_NAME_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_BUSINESS_NAME_DESC"
				class="inputbox"
				default=""
			/>
			<field
				name="org_reg_no"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_ORG_REG_NO_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_ORG_REG_NO_DESC"
				class="inputbox"
				default=""
			/>
			<field
				name="org_certificate"
				type="uploader"
				label="COM_SELLACIOUS_PROFILE_FIELD_ORG_CERTIFICATE_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_ORG_CERTIFICATE_DESC"
				tableName="clients"
				context="org_certificate"
				recordId="0"
				uploadLimit="5"
				maxSize="5 MB"
				extensions="jpg,png,jpeg,gif,pdf,doc,docx"
				showPublish="false"
				showRename="true"
				showRemove="true"
			/>
			<field
				name="location"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_GEO_LOCATION_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_GEO_LOCATION_DESC"
				class="inputbox medium-input"
				filter="string"
			/>
			<field
				name="credit_limit"
				type="money"
				label="COM_SELLACIOUS_PROFILE_FIELD_CREDIT_LIMIT_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_CREDIT_LIMIT_DESC"
				currency="global"
				class="premium-input"
			/>
			<field
				name="authorised"
				type="userGrid"
				label="COM_SELLACIOUS_PROFILE_FIELD_AUTHORISED_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_AUTHORISED_DESC"
				required="false"
				currency="id"
				class="premium-input"
			/>
		</fieldset>
	</fields>
</form>
