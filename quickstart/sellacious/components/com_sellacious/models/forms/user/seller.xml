<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="seller">
		<fieldset name="seller" label="COM_SELLACIOUS_PROFILE_FIELDSET_SELLER">
			<field
				name="id"
				type="hidden"
			/>
			<field
				name="title"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_SELLER_NAME_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SELLER_NAME_DESC"
				class="inputbox medium-input"
			/>
			<field
				name="store_name"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_STORE_NAME_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_STORE_NAME_DESC"
				class="inputbox medium-input"
			/>
			<field
				name="store_address"
				type="textarea"
				label="COM_SELLACIOUS_PROFILE_FIELD_STORE_ADDRESS_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_STORE_ADDRESS_DESC"
				class="textarea medium-input"
				rows="6"
			/>
			<field
				name="code"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_SELLER_CODE_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SELLER_CODE_DESC"
				class="inputbox medium-input"
				validate="sellerCode"
				message="COM_SELLACIOUS_PROFILE_FIELD_SELLER_CODE_MSG"
			/>
			<field
				name="logo"
				type="uploader"
				label="COM_SELLACIOUS_PROFILE_FIELD_SELLER_LOGO_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SELLER_LOGO_DESC"
				tableName="sellers"
				context="logo"
				recordId="0"
				uploadLimit="1"
				maxSize="5 MB"
				extensions="jpg,png,jpeg,gif"
				showPublish="false"
				showRename="true"
				showRemove="true"
			/>
			<field
				name="currency"
				type="sql"
				query="SELECT `code_3` AS `value`, CONCAT(`code_3`, ' - ', `title`) AS `currency` FROM #__sellacious_currencies WHERE `state` = 1 ORDER BY `code_3`"
				label="COM_SELLACIOUS_PROFILE_FIELD_CURRENCY_LISTING_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_CURRENCY_LISTING_DESC"
				class="medium-input"
			>
				<option value=""/>
			</field>
			<field
				name="store_location_group"
				type="fieldgroup"
				label="COM_SELLACIOUS_PROFILE_FIELD_STORE_LOCATION_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_STORE_LOCATION_DESC"
			/>
			<field
				name="store_location_address"
				type="mapaddress"
				label="COM_SELLACIOUS_PROFILE_FIELD_STORE_LOCATION_ADDRESS_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_STORE_LOCATION_ADDRESS_DESC"
				class="inputbox w40p"
				autocomplete="off"
			/>
			<field
				name="store_location"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_SELLER_STORE_LOCATION_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SELLER_STORE_LOCATION_DESC"
				class="inputbox medium-input"
				filter="string"
			/>
			<field
				name="ship_origin_group"
				type="fieldgroup"
				label="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_LOCATION_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_LOCATION_DESC"
			/>
			<field
				name="ship_origin_address_line1"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_ADDRESS_LINE1_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_ADDRESS_LINE1_DESC"
				class="inputbox medium-input"
			/>
			<field
				name="ship_origin_address_line2"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_ADDRESS_LINE2_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_ADDRESS_LINE2_DESC"
				class="inputbox medium-input"
			/>
			<field
				name="ship_origin_address_line3"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_ADDRESS_LINE3_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_ADDRESS_LINE3_DESC"
				class="inputbox medium-input"
			/>
			<field
				name="ship_origin_country"
				type="location"
				label="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_COUNTRY_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_COUNTRY_DESC"
				class="gl-input"
				autocomple="off"
				gl_type="country"
				rel=""
			/>
			<field
				name="ship_origin_state"
				type="location"
				label="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_STATE_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_STATE_DESC"
				class="gl-input"
				autocomple="off"
				gl_type="state"
				rel="seller.ship_origin_country"
			/>
			<field
				name="ship_origin_district"
				type="location"
				label="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_DISTRICT_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_DISTRICT_DESC"
				class="gl-input"
				autocomple="off"
				gl_type="district"
				rel="seller.ship_origin_state|seller.ship_origin_country"
			/>
			<field
				name="ship_origin_zip"
				type="location"
				label="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_ZIP_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SHIP_ORIGIN_ZIP_DESC"
				class="gl-input"
				autocomple="off"
				gl_type="zip"
				rel="seller.ship_origin_district|seller.ship_origin_state|seller.ship_origin_country"
			/>

			<fields name="shipping_geo">
				<field
					name="shipping_geo_group"
					type="fieldgroup"
					label="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_LOCATIONS_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_LOCATIONS_DESC"
				/>
				<field
					name="country"
					type="location"
					label="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_COUNTRIES_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_COUNTRIES_DESC"
					class="gl-input"
					autocomple="off"
					multiple="true"
					address_type="shipping"
					gl_type="country"
					rel=""
				/>
				<field
					name="state"
					type="location"
					label="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_STATES_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_STATES_DESC"
					class="gl-input"
					autocomple="off"
					multiple="true"
					address_type="shipping"
					gl_type="state"
					rel=""
				/>
				<field
					name="district"
					type="location"
					label="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_DISTRICTS_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_DISTRICTS_DESC"
					class="gl-input"
					autocomple="off"
					multiple="true"
					address_type="shipping"
					gl_type="district"
					rel=""
				/>
				<field
					name="zip"
					type="location"
					label="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_ZIPS_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_SHIPPING_ZIPS_DESC"
					class="gl-input"
					autocomple="off"
					multiple="true"
					address_type="shipping"
					gl_type="zip"
					rel=""
				/>
			</fields>
		</fieldset>

		<fieldset name="commission" label="COM_SELLACIOUS_USER_FIELDSET_COMMISSION">
			<field
				name="commission"
				type="CategoryCommission"
				label="COM_SELLACIOUS_USER_FIELD_SELLER_COMMISSION_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_SELLER_COMMISSION_DESC"
				currency="global"
			/>
		</fieldset>
	</fields>
</form>
