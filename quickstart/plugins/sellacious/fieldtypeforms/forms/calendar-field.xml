			<field
				name="readonly"
				type="radio"
				label="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_READ_ONLY_LABEL"
				default="false"
				description="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_READ_ONLY_DESC"
			>
				<option value="true">JYes</option>
				<option value="false">JNo</option>
			</field>
			<field
				name="disabled"
				type="radio"
				label="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DISABLED_LABEL"
				default="false"
				description="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DISABLED_DESC"
			>
				<option value="true">JYes</option>
				<option value="false">JNo</option>
			</field>
			<field
				name="format"
				type="list"
				label="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DATE_FORMAT_LABEL"
				default="%Y-%m-%d %H:%M"
				description="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DATE_FORMAT_DESC"
				class="w100p"
			>
				<option value="%m/%d/%Y %H:%M">PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DATE_FORMAT_OPTION_MDYHM</option>
