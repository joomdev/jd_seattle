				<option value="%d.%m.%Y %I:%M %p">PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DATE_FORMAT_OPTION_DMYIMP</option>
				<option value="%Y-%m-%d %I:%M %p">PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DATE_FORMAT_OPTION_YMDIMP</option>
				<option value="%m/%d/%Y">PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DATE_FORMAT_OPTION_MDY</option>
				<option value="%d.%m.%Y">PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DATE_FORMAT_OPTION_DMY</option>
