            <field type="text" name="ogTitle" label="JDB_TITLE" group="opengraph" default="">
            </field>
            <field type="textarea" name="ogDescription" label="JDB_DESCRIPTION" group="opengraph" default="">
            </field>
            <field type="image" name="ogImage" label="JDB_IMAGE" group="opengraph" default="">
