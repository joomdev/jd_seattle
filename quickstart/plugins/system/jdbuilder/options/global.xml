                <field type="color" name="globalTextLinkColor" label="JDB_LINK_COLOR" default="" group="body_typography">
                </field>
                <field type="color" name="globalTextLinkHoverColor" label="JDB_LINK_HOVER_COLOR" default="" group="body_typography">
                </field>
                <field type="typography" responsive="true" name="globalTextTypography" label="JDB_TYPOGRAPHY" default='{"family":"", "size":"", "sizeUnit":"px", "alignment":"", "weight":"", "transform":"", "style":"", "decoration":"", "lineHeight":"", "lineHeightUnit": "px", "letterSpacing":"", "letterSpacingUnit": "px"}' group="body_typography">
