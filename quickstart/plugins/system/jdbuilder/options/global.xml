            <!-- Component Options -->
            <fieldset name="component" ordering="3" label="JDB_COMPONENTS">
                <field type="group" name="lightboxOptions" label="JDB_LIGHTBOX_OPTIONS"></field>

                <field name="lightbox" type="switch" label="JDB_LIGHTBOX" default="true" group="lightboxOptions">
                </field>

                <field showon="params.lightbox" name="lightboxCounter" type="switch" label="JDB_COUNTER" default="true" group="lightboxOptions">
                </field>

                <field showon="params.lightbox" name="lightboxFullscreen" type="switch" label="JDB_FULL_SCREEN" default="true" group="lightboxOptions">
                </field>

                <field showon="params.lightbox" name="lightboxTitleSource" type="list" label="JDB_TITLE" default="title" group="lightboxOptions" search="false">
                    <option value="title">JDB_TITLE</option>
                    <option value="caption">JDB_CAPTION</option>
                    <option value="alt">JDB_ALT_TEXT</option>
                </field>

                <field showon="params.lightbox" name="lightboxDescriptionSource" type="list" label="JDB_DESCRIPTION" default="caption" group="lightboxOptions" search="false">
                    <option value="title">JDB_TITLE</option>
                    <option value="caption">JDB_CAPTION</option>
                    <option value="alt">JDB_ALT_TEXT</option>
                </field>

                <field showon="params.lightbox" type="spacer" label="JDB_LIGHTBOX_DESIGN" group="lightboxOptions">
                </field>

                <field showon="params.lightbox" type="color" width="6" name="lightboxTextColor" label="JDB_TEXT_COLOR" default="" group="lightboxOptions">
                </field>

                <field showon="params.lightbox" type="color" width="6" name="lightboxBackgroundColor" label="JDB_BACKGROUND_COLOR" default="" group="lightboxOptions">
                </field>

                <field showon="params.lightbox" type="color" width="6" name="lightboxIconColor" label="JDB_ICON_COLOR_LABEL" default="" group="lightboxOptions">
                </field>

                <field showon="params.lightbox" type="color" width="6" name="lightboxIconHoverColor" label="JDB_ICON_HOVER_COLOR_LABEL" default="" group="lightboxOptions">
                </field>

                <field showon="params.lightbox" type="slider" name="lightboxIconSize" label="JDB_ICON_SIZE" max="200" min="10" unit="" group="lightboxOptions" responsive="true">
                </field>

                <field showon="params.lightbox" type="slider" name="lightboxNavigationIconSize" label="JDB_NAVIGATION_ICON_SIZE" max="200" min="10" unit="" group="lightboxOptions" responsive="true">
                </field>
            </fieldset>
        </fields>
    </form>
</element>