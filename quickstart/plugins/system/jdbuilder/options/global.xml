                <field type="group" name="colors" label="JDB_COLOR"></field>
                <field type="group" name="typography" label="JDB_TYPOGRAPHY"></field>
                <field type="color" group="colors" default="#6E00FF" name="globalPrimary" label="JDB_PRIMARY"></field>
                <field type="color" group="colors" default="#273444" name="globalSecondary" label="JDB_SECONDARY"></field>
                <field type="color" group="colors" default="#36B37E" name="globalSuccess" label="JDB_SUCCESS"></field>
