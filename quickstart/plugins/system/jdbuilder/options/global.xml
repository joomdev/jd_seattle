                </field>
                <field type="color" name="globalH3LinkHoverColor" label="JDB_LINK_HOVER_COLOR" default="" group="h3_typography">
                </field>
                <field type="typography" responsive="true" name="globalH3Typography" label="JDB_TYPOGRAPHY" default='{"family":"", "size":"", "sizeUnit":"px", "alignment":"", "weight":"", "transform":"", "style":"", "decoration":"", "lineHeight":"", "lineHeightUnit": "px", "letterSpacing":"", "letterSpacingUnit": "px"}' group="h3_typography">
                </field>


                <field type="group" label="JDB_H4_TYPOGRAPHY" name="h4_typography">
                </field>
                <field type="color" name="globalH4Color" label="JDB_COLOR" default="" group="h4_typography">
                </field>
                <field type="color" name="globalH4LinkColor" label="JDB_LINK_COLOR" default="" group="h4_typography">
                </field>
                <field type="color" name="globalH4LinkHoverColor" label="JDB_LINK_HOVER_COLOR" default="" group="h4_typography">
