                </field>
                <field type="color" name="globalH5LinkColor" label="JDB_LINK_COLOR" default="" group="h5_typography">
                </field>
                <field type="color" name="globalH5LinkHoverColor" label="JDB_LINK_HOVER_COLOR" default="" group="h5_typography">
                </field>
                <field type="typography" responsive="true" name="globalH5Typography" label="JDB_TYPOGRAPHY" default='{"family":"", "size":"", "sizeUnit":"px", "alignment":"", "weight":"", "transform":"", "style":"", "decoration":"", "lineHeight":"", "lineHeightUnit": "px", "letterSpacing":"", "letterSpacingUnit": "px"}' group="h5_typography">
