                </field>
                <field type="color" name="globalH2LinkColor" label="JDB_LINK_COLOR" default="" group="h2_typography">
                </field>
                <field type="color" name="globalH2LinkHoverColor" label="JDB_LINK_HOVER_COLOR" default="" group="h2_typography">
                </field>
                <field type="typography" responsive="true" name="globalH2Typography" label="JDB_TYPOGRAPHY" default='{"family":"", "size":"", "sizeUnit":"px", "alignment":"", "weight":"", "transform":"", "style":"", "decoration":"", "lineHeight":"", "lineHeightUnit": "px", "letterSpacing":"", "letterSpacingUnit": "px"}' group="h2_typography">
