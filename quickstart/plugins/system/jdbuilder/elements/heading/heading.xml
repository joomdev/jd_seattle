<?xml version="1.0" encoding="utf-8"?>
<element type="heading">
   <title>Heading</title>
   <icon>media/jdbuilder/images/icons/elements/heading.svg</icon>
   <creationDate>March 2019</creationDate>
   <author>JoomDev</author>
   <authorEmail>info@joomdev.com</authorEmail>
   <authorUrl>https://www.joomdev.com</authorUrl>
   <copyright>Copyright (C) 2020 Joomdev, Inc. All rights reserved.</copyright>
   <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
   <version>1.0</version>
   <description>Element Description Here</description>
   <documentation>https://docs.joomdev.com/article/heading-element/</documentation>
   <form>
      <fields>
         <fieldset name="general" label="JDB_GENERAL_TITLE">
            <field type="group" ordering="1" name="content" label="JDB_HEADING_CONTENT"></field>
            <!--  Element Options -->
            <field name="title" type="text" label="JDB_HEADING_TEXT" default="Heading Text" group="content">
            </field>

            <field name="subtitle" type="text" label="JDB_HEADING_SUB_HEADING_TEXT" default="" group="content">
            </field>

            <field name="subtitlePosition" type="radio" label="JDB_HEADING_SUB_HEADING_POSITION" default="below" radiotype="buttons" group="content">
               <option value="above">JDB_POSITION_ABOVE</option>
               <option value="below">JDB_POSITION_BELOW</option>
            </field>

            <field name="headingAlignment" type="radio" label="JDB_TEXT_ALIGN" default="" radiotype="buttons" icononly="true" group="content" responsive="true">
               <option value="">JDB_DEFAULT</option>
               <option value="left" icon="fa fa-align-left">JDB_LEFT</option>
               <option value="center" icon="fa fa-align-center">JDB_CENTER</option>
               <option value="right" icon="fa fa-align-right">JDB_RIGHT</option>
               <option value="justify" icon="fa fa-align-justify">JDB_JUSTIFY</option>
            </field>

            <field type="slider" name="headingSpacing" label="JDB_SPACING" min="0" max="200" unit="px" responsive="true" group="content">
            </field>

            <field name="link" type="text" label="JDB_LINK_LABEL" default="" group="content" placeholder="Link">
            </field>

            <field name="linkTargetBlank" type="switch" label="JDB_LINK_TARGET_LBL" default="false" showon="params.link!=''" group="content">
            </field>

            <field name="linkNoFollow" type="switch" label="JDB_LINK_NOFOLLOW_LBL" default="false" showon="params.link!=''" group="content">
            </field>
         </fieldset>

         <fieldset name="design" ordering="9" label="JDB_DESIGN_TITLE">
            <field type="group" ordering="2" name="headingtypography" label="JDB_HEADING"></field>
            <field type="group" ordering="3" name="subheadingtypography" label="JDB_SUB_HEADING"></field>

            <!-- Heading Options Start -->
            <field name="headingHtmlTag" type="list" label="JDB_HTML_TAG" default="h3" group="headingtypography">
               <option value="h1">JDB_H1</option>
               <option value="h2">JDB_H2</option>
               <option value="h3">JDB_H3</option>
               <option value="h4">JDB_H4</option>
               <option value="h5">JDB_H5</option>
               <option value="h6">JDB_H6</option>
               <option value="p">JDB_P</option>
               <option value="span">JDB_SPAN</option>
               <option value="small">JDB_SMALL</option>
            </field>

            <field type="color" name="headingFontColor" label="JDB_TEXT_COLOR" default="" group="headingtypography">
            </field>

            <field type="textshadow" name="headingTextShadow" label="JDB_TEXT_SHADOW" default="" group="headingtypography">
            </field>

            <field type="typography" responsive="true" name="headingTypography" label="JDB_TYPOGRAPHY" default="" group="headingtypography">
            </field>
            <!-- Heading Options End -->

            <!-- Sub Heading Options Start -->
            <field name="subheadingHtmlTag" type="list" label="JDB_HTML_TAG" default="span" group="subheadingtypography">
               <option value="h1">JDB_H1</option>
               <option value="h2">JDB_H2</option>
               <option value="h3">JDB_H3</option>
               <option value="h4">JDB_H4</option>
               <option value="h5">JDB_H5</option>
               <option value="h6">JDB_H6</option>
               <option value="p">JDB_P</option>
               <option value="span">JDB_SPAN</option>
               <option value="small">JDB_SMALL</option>
            </field>

            <field type="color" name="subheadingFontColor" label="JDB_TEXT_COLOR" default="" group="subheadingtypography">
            </field>

            <field type="textshadow" name="subheadingTextShadow" label="JDB_TEXT_SHADOW" default="" group="subheadingtypography">
            </field>

            <field type="typography" responsive="true" name="subheadingTypography" label="JDB_TYPOGRAPHY" default="" group="subheadingtypography">
            </field>
            <!-- Sub Heading Options End -->
         </fieldset>
      </fields>
   </form>
</element>