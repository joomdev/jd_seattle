<?xml version="1.0" encoding="utf-8"?>
<element type="separator">
   <title>Separator</title>
   <icon>media/jdbuilder/images/icons/elements/separator.svg</icon>
   <creationDate>March 2019</creationDate>
   <author>JoomDev</author>
   <authorEmail>info@joomdev.com</authorEmail>
   <authorUrl>https://www.joomdev.com</authorUrl>
   <copyright>Copyright (C) 2020 Joomdev, Inc. All rights reserved.</copyright>
   <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
   <version>1.0</version>
   <description>Element Description Here</description>
   <documentation>https://docs.joomdev.com/article/separator-element/</documentation>
   <form>
      <fields>
         <fieldset name="general" label="JDB_GENERAL_TITLE">
            <field name="separatorType" type="list" label="JDB_STYLE" default="solid" search="true" width="6" group="basic">
               <option value="hidden">JDB_BORDER_NONE</option>
               <option value="dotted">JDB_BORDER_DOTTED</option>
               <option value="dashed">JDB_BORDER_DASHED</option>
               <option value="solid">JDB_BORDER_SOLID</option>
               <option value="double">JDB_BORDER_DOUBLE</option>
               <option value="groove">JDB_BORDER_GROOVE</option>
               <option value="ridge">JDB_BORDER_RIDGE</option>
            </field>
            <field name="separatorColor" type="color" label="JDB_COLOR" default="" width="6" group="basic">
            </field>
            <field name="separatorAlignment" type="radio" label="JDB_ALIGNMENT" default="" radiotype="buttons" group="basic" responsive="true">
               <option value="left" icon="fa fa-align-left">JDB_LEFT</option>
               <option value="center" icon="fa fa-align-center">JDB_CENTER</option>
               <option value="right" icon="fa fa-align-right">JDB_RIGHT</option>
            </field>
            <field name="separatorWeight" type="slider" label="JDB_SEPARATOR_HEIGHT" default="" min="1" max="20" unit="px" group="basic" responsive="true">
            </field>
            <field name="separatorWidth" type="slider" label="JDB_WIDTH" unit="%" default="" max="1600" min="1" units="px,%" group="basic" responsive="true">
            </field>
            <field name="separatorGap" type="slider" label="JDB_SEPARATOR_SPACING" default="" unit="px" max="200" group="basic" responsive="true">
            </field>
            <field type="spacing" name="separatorRadius" label="JDB_RADIUS" default='{"unit":"px","lock":1,"top":"","left":"","right":"","bottom":""}' corners="true" units="px,em" responsive="true" group="basic">
            </field>
         </fieldset>
      </fields>
   </form>
</element>