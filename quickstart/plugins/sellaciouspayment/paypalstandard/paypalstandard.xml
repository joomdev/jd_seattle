<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="sellaciouspayment" method="upgrade">
	<name>plg_sellaciouspayment_paypalstandard</name>
	<author>Bhavika Matariya</author>
	<creationDate>December 26, 2018</creationDate>
	<copyright>Copyright (C) 2012-2018 Bhartiy Web Technologies. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@bhartiy.com</authorEmail>
	<authorUrl>www.bhartiy.com</authorUrl>
	<version>1.6.1-alpha0</version>
	<description>PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_XML_DESCRIPTION</description>
	<files>
		<folder>forms</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>layout</folder>
		<filename plugin="paypalstandard">paypalstandard.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
			<field
				name="api_mode"
				type="radio"
				default="sandbox"
				description="PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_API_MODE_DESC"
				label="PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_API_MODE_LABEL"
			>
				<option value="live">PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_MODE_LIVE</option>
				<option value="sandbox">PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_MODE_SANDBOX</option>
			</field>
			<field
				name="sandbox_paypal_email"
				type="text"
				size="50"
				required="true"
				description="PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_SANDBOX_PAYPAL_EMAIL_DESC"
				label="PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_SANDBOX_PAYPAL_EMAIL_LABEL"
				class="inputbox"
			/>
			<field
				name="live_paypal_email"
				type="text"
				size="50"
				required="true"
				description="PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_LIVE_PAYPAL_EMAIL_DESC"
				label="PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_LIVE_PAYPAL_EMAIL_LABEL"
				class="inputbox"
			/>
			 <field
				 name="note"
				 type="note"
				 heading="h1"
				 description="PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_NOTE_DESC"
				 label="PLG_SELLACIOUSPAYMENT_PAYPALSTANDARD_NOTE_LABEL"
			 />
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" name="Sellacious Updates - plg_sellaciouspayment_paypalstandard">http://sellacious.com/release/updates/v1.6/plg_sellaciouspayment_paypalstandard.xml</server>
	</updateservers>
</extension>
