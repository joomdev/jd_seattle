<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic" label="COM_SELLACIOUS_SELLER_FIELDSET_BASIC">
		<field
			name="id"
			type="hidden"
			default="0"
			readonly="true"
			/>
		<field
			name="name"
			type="text"
			label="COM_SELLACIOUS_SELLER_FIELD_NAME_LABEL"
			description="COM_SELLACIOUS_SELLER_FIELD_NAME_DESC"
			class="inputbox"
			required="true"
			/>
		<field
			name="email"
			type="email"
			label="COM_SELLACIOUS_SELLER_FIELD_EMAIL_LABEL"
			description="COM_SELLACIOUS_SELLER_FIELD_EMAIL_DESC"
			class="inputbox"
			required="true"
			/>
		<field
			name="password"
			type="password"
			autocomplete="off"
			class="validate-password inputbox"
			description="COM_SELLACIOUS_PROFILE_USER_FIELD_PASSWORD_DESC"
			filter="raw"
			validate="password"
			label="JGLOBAL_PASSWORD"
			size="30"
			required="true"
		/>
		<field
			name="password2"
			type="password"
			autocomplete="off"
			class="validate-password inputbox"
			description="COM_SELLACIOUS_PROFILE_USER_FIELD_PASSWORD2_DESC"
			filter="raw"
			label="COM_SELLACIOUS_PROFILE_USER_FIELD_PASSWORD2_LABEL"
			size="30"
			validate="equals"
			field="password"
			required="true"
		/>
		<field
			name="avatar"
			type="uploader"
			label="COM_SELLACIOUS_PROFILE_FIELD_USER_AVATAR_LABEL"
			description="COM_SELLACIOUS_PROFILE_FIELD_USER_AVATAR_DESC"
			tableName="user"
			context="avatar"
			recordId="0"
			uploadLimit="1"
			maxSize="5 MB"
			extensions="jpg,png,jpeg,gif"
			showPublish="false"
			showRename="false"
			showRemove="true"
		/>
	</fieldset>
	<fields name="profile">
		<fieldset name="basic" label="COM_SELLACIOUS_PROFILE_FIELDSET_BASIC">
			<field
				name="mobile"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_MOBILE_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_MOBILE_DESC"
				class="inputbox medium-input validate-mobile"
				size="60"
			/>
			<field
				name="website"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_WEBSITE_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_WEBSITE_DESC"
				class="inputbox medium-input"
				size="60"
				validate="url"
				hint="http://"
			/>
			<field
				name="currency"
				type="sql"
				query="SELECT `code_3` AS `value`, CONCAT(`code_3`, ' - ', `title`) AS `currency` FROM #__sellacious_currencies WHERE `state` = 1 ORDER BY `code_3`"
				label="COM_SELLACIOUS_PROFILE_FIELD_CURRENCY_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_CURRENCY_DESC"
				class="medium-input"
			>
				<option value=""/>
			</field>
		</fieldset>
		<fields name="bankinfo">
			<fieldset name="bank_tax_info" label="COM_SELLACIOUS_PROFILE_FIELDSET_BANK_TAX_INFO">
				<field
					name="name"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKNAME_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKNAME_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="country"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKCOUNTRY_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKCOUNTRY_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="branch"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKBRANCH_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKBRANCH_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="beneficiary"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKBENEFICIARY_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKBENEFICIARY_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="accountnumber"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKACCNO_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKACCNO_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="code"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKCODE_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKCODE_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="micr"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKMICR_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKMICR_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="ifsc"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKIFSC_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKIFSC_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="swift"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_BANKSWIFT_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_BANKSWIFT_DESC"
					class="inputbox"
					size="60"
				/>
			</fieldset>
		</fields>
		<fields name="taxinfo">
			<fieldset name="bank_tax_info" label="COM_SELLACIOUS_PROFILE_FIELDSET_BANK_TAX_INFO">
				<field
					name="salestax"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_SALESTAX_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_SALESTAX_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="servicetax"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_SERVICETAX_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_SERVICETAX_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="incometax"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_INCOMETAX_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_INCOMETAX_DESC"
					class="inputbox"
					size="60"
				/>
				<field
					name="tax"
					type="text"
					label="COM_SELLACIOUS_PROFILE_FIELD_TAX_LABEL"
					description="COM_SELLACIOUS_PROFILE_FIELD_TAX_DESC"
					class="inputbox"
					size="60"
				/>
			</fieldset>
		</fields>
	</fields>
	<fields name="seller">
		<fieldset name="seller" label="COM_SELLACIOUS_PROFILE_FIELDSET_SELLER">
			<field
				name="id"
				type="hidden"
			/>
			<field
				name="category_id"
				type="hidden"
				readonly="true"
			/>
			<field
				name="title"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_SELLER_NAME_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SELLER_NAME_DESC"
				class="inputbox"
			/>
			<field
				name="store_name"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_STORE_NAME_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_STORE_NAME_DESC"
				class="inputbox medium-input"
			/>
			<field
				name="store_address"
				type="textarea"
				label="COM_SELLACIOUS_PROFILE_FIELD_STORE_ADDRESS_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_STORE_ADDRESS_DESC"
				class="textarea medium-input"
				rows="6"
			/>
			<field
				name="currency"
				type="sql"
				query="SELECT `code_3` AS `value`, CONCAT(`code_3`, ' - ', `title`) AS `currency` FROM #__sellacious_currencies WHERE `state` = 1 ORDER BY `code_3`"
				label="COM_SELLACIOUS_PROFILE_FIELD_CURRENCY_LISTING_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_CURRENCY_LISTING_DESC"
				class="medium-input"
			>
				<option value=""/>
			</field>
			<field
				name="store_location"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_SELLER_STORE_LOCATION_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_SELLER_STORE_LOCATION_DESC"
				class="inputbox medium-input"
				filter="string"
			/>
		</fieldset>
	</fields>
	<fieldset name="captcha">
		<field
			name="agree_tnc"
			type="userTermsAgreement"
			label="COM_SELLACIOUS_PROFILE_FIELD_AGREE_TNC_LABEL"
			description="COM_SELLACIOUS_PROFILE_FIELD_AGREE_TNC_DESC"
			required="true"
		/>
		<field
			name="captcha"
			type="captcha"
			label="COM_SELLACIOUS_CAPTCHA_LABEL"
			description="COM_SELLACIOUS_CAPTCHA_DESC"
			validate="captcha"
		/>
	</fieldset>
</form>
