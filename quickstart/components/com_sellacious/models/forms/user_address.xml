<form>
	<field
		name="id"
		type="hidden"
		class="w100p address-id"
	/>
	<field
		name="name"
		type="text"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_NAME_LABEL"
		class="w100p address-name"
		required="true"
	/>
	<field
		name="company"
		type="text"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_COMPANY_LABEL"
		class="w100p address-company"
	/>
	<field
		name="po_box"
		type="text"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_PO_BOX_LABEL"
		class="w100p address-po_box"
	/>
	<field
		name="address"
		type="textarea"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_ADDRESS_LABEL"
		class="w100p address-address"
		required="true"
	/>
	<field
		name="landmark"
		type="text"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_LANDMARK_LABEL"
		class="w100p address-landmark"
		autocomplete="off"
	/>
	<field
		name="country"
		type="country"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_COUNTRY_LABEL"
		class="w100p address-country hasSelect2"
		autocomplete="off"
		gl_type="country"
		address_type="any"
		default="shop_country"
		rel=""
	/>
	<field
		name="state_loc"
		type="geostate"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_STATE_LOC_LABEL"
		class="w100p address-state_loc"
		autocomplete="off"
		gl_type="state"
		address_type="any"
		rel="country"
	/>
	<field
		name="district"
		type="location"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_DISTRICT_LABEL"
		class="w100p address-district"
		autocomplete="off"
		gl_type="district"
		address_type="any"
		rel="state_loc|country"
	/>
	<field
		name="zip"
		type="text"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_ZIP_LABEL"
		class="w100p address-zip"
		autocomplete="off"
	/>
	<field
		name="mobile"
		type="text"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_MOBILE_LABEL"
		class="w100p address-mobile validate-mobile"
		required="true"
	/>
	<field
		name="residential"
		type="radio"
		label="COM_SELLACIOUS_ADDRESS_FORM_FIELD_RESIDENTIAL_LABEL"
		class="address-residential"
		required="true"
	>
		<option value="0">COM_SELLACIOUS_ADDRESS_FORM_FIELD_TYPE_OPTION_OFFICE</option>
		<option value="1">COM_SELLACIOUS_ADDRESS_FORM_FIELD_TYPE_OPTION_RESIDENTIAL</option>
	</field>
</form>
