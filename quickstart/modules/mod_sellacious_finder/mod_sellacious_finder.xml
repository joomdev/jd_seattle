	<authorEmail>info@bhartiy.com</authorEmail>
	<authorUrl>www.bhartiy.com</authorUrl>
	<version>1.6.1-alpha0</version>
	<description>MOD_SELLACIOUS_FINDER_DESC</description>
	<files>
		<filename module="mod_sellacious_finder">mod_sellacious_finder.php</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>
	<media folder="media" destination="mod_sellacious_finder">
		<folder>css</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="integration"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_INTEGRATION_LABEL"
					description="MOD_SELLACIOUS_FINDER_INTEGRATION_DESC"
					default="sellacious"
				>
					<option value="sellacious">MOD_SELLACIOUS_FINDER_INTEGRATION_SELLACIOUS</option>
					<option value="finder">MOD_SELLACIOUS_FINDER_INTEGRATION_JOOMLA_FINDER</option>
				</field>

				<field
					name="search_layout"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_STYLE_LABEL"
					description="MOD_SELLACIOUS_FINDER_STYLE_DESC"
					default="default"
				>
					<option value="default">MOD_SELLACIOUS_FINDER_DEFAULT</option>
					<option value="dropdown">MOD_SELLACIOUS_FINDER_DROPDOWN</option>
					<option value="overlay">MOD_SELLACIOUS_FINDER_OVERLAY</option>
				</field>

				<field
					name="full_width"
					type="radio"
					class="btn-group btn-yes-no"
					label="MOD_SELLACIOUS_FINDER_FULL_WIDTH"
					description="MOD_SELLACIOUS_FINDER_FULL_WIDTH_DESC"
					showon="search_layout:default"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="input_width"
					type="number"
					label="MOD_SELLACIOUS_FINDER_INPUT_WIDTH"
					description="MOD_SELLACIOUS_FINDER_INPUT_WIDTH_DESC"
					showon="search_layout:default[AND]full_width:0"
					default="200"
				/>

				<field
					name="spacer0"
					type="spacer"
					label="&lt;hr/&gt; &lt;b&gt;Input And Button Options&lt;/b&gt;"
				/>

				<field
					name="display_label"
					type="radio"
					class="btn-group btn-yes-no"
					label="MOD_SELLACIOUS_FINDER_DISPLAY_LABEL"
					description="MOD_SELLACIOUS_FINDER_DISPLAY_LABEL_DESC"
					showon="search_layout!:overlay"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="label_value"
					type="text"
					label="MOD_SELLACIOUS_FINDER_INPUT_LABEL"
					description="MOD_SELLACIOUS_FINDER_INPUT_LABEL_DESC"
					hint="MOD_SELLACIOUS_FINDER_INPUT_LABEL_HINT"
					showon="display_label:1[AND]search_layout!:overlay"
					default="Search"
				/>

				<field
					name="finder_placeholder"
					type="text"
					label="MOD_SELLACIOUS_FINDER_INPUT_PLACEHOLDER"
					description="MOD_SELLACIOUS_FINDER_INPUT_PLACEHOLDER_DESC"
					hint="MOD_SELLACIOUS_FINDER_INPUT_PLACEHOLDER_HINT"
					default="Search.."
				/>

				<field
					name="button_type"
					type="list"
					label="MOD_SELLACIOUS_FINDER_BUTTON_TYPE"
					description="MOD_SELLACIOUS_FINDER_BUTTON_TYPE_DESC"
					showon="search_layout!:overlay"
					default="icon"
				>
					<option value="icon">MOD_SELLACIOUS_FINDER_ICON</option>
					<option value="text">MOD_SELLACIOUS_FINDER_TEXT</option>
					<option value="both">MOD_SELLACIOUS_FINDER_BOTH</option>
				</field>

				<field
					name="button_text"
					type="text"
					label="MOD_SELLACIOUS_FINDER_BUTTON_TEXT"
					description="MOD_SELLACIOUS_FINDER_BUTTON_TEXT_DESC"
					showon="search_layout!:overlay[AND]button_type!:icon"
					default="Search"
				/>

				<field
					name="button_position"
					type="list"
					label="MOD_SELLACIOUS_FINDER_BUTTON_POSITION"
					description="MOD_SELLACIOUS_FINDER_BUTTON_POSITION_DESC"
					showon="search_layout!:overlay"
					default="right"
				>
					<option value="bottom">MOD_SELLACIOUS_FINDER_BTN_BOTTOM</option>
					<option value="right">MOD_SELLACIOUS_FINDER_BTN_RIGHT</option>
				</field>

				<field
					name="category_spacer"
					type="spacer"
					label="&lt;hr/&gt; &lt;b&gt;Products in Category Options&lt;/b&gt;"
				/>

				<field
					name="show_category_results"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_CATEGORY_RESULTS_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_CATEGORY_RESULTS_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="category_result_redirect"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_CATEGORY_RESULT_REDIRECT_LABEL"
					description="MOD_SELLACIOUS_FINDER_CATEGORY_RESULT_REDIRECT_DESC"
					default="1"
				>
					<option value="1">MOD_SELLACIOUS_FINDER_SEARCH_RESULTS_PAGE</option>
					<option value="2">MOD_SELLACIOUS_FINDER_PRODUCTS_PAGE</option>
					<option value="3">MOD_SELLACIOUS_FINDER_CATEGORIES_PAGE</option>
				</field>

				<field
					name="show_category_image"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_CATEGORY_IMAGE_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_CATEGORY_IMAGE_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="seller_spacer"
					type="spacer"
					label="&lt;hr/&gt; &lt;b&gt;Products in Seller Options&lt;/b&gt;"
				/>

				<field
					name="show_seller_results"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_SELLER_RESULTS_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_SELLER_RESULTS_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="seller_result_redirect"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SELLER_RESULT_REDIRECT_LABEL"
					description="MOD_SELLACIOUS_FINDER_SELLER_RESULT_REDIRECT_DESC"
					default="1"
				>
					<option value="1">MOD_SELLACIOUS_FINDER_SEARCH_RESULTS_PAGE</option>
					<option value="2">MOD_SELLACIOUS_FINDER_PRODUCTS_PAGE</option>
					<option value="3">MOD_SELLACIOUS_FINDER_STORE_PAGE</option>
				</field>

				<field
					name="show_seller_image"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_SELLER_IMAGE_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_SELLER_IMAGE_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="categories_spacer"
					type="spacer"
					label="&lt;hr/&gt; &lt;b&gt;Category Results Options&lt;/b&gt;"
				/>

				<field
					name="show_categories_results"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_CATEGORIES_RESULTS_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_CATEGORIES_RESULTS_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="categories_result_redirect"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_CATEGORIES_RESULT_REDIRECT_LABEL"
					description="MOD_SELLACIOUS_FINDER_CATEGORIES_RESULT_REDIRECT_DESC"
					default="1"
				>
					<option value="1">MOD_SELLACIOUS_FINDER_CATEGORIES_PAGE</option>
					<option value="2">MOD_SELLACIOUS_FINDER_PRODUCTS_PAGE</option>
				</field>

				<field
					name="show_categories_image"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_CATEGORIES_IMAGE_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_CATEGORIES_IMAGE_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="sellers_spacer"
					type="spacer"
					label="&lt;hr/&gt; &lt;b&gt;Seller Results Options&lt;/b&gt;"
				/>

				<field
					name="show_sellers_results"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_SELLERS_RESULTS_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_SELLERS_RESULTS_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="sellers_result_redirect"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SELLERS_RESULT_REDIRECT_LABEL"
					description="MOD_SELLACIOUS_FINDER_SELLERS_RESULT_REDIRECT_DESC"
					default="1"
				>
					<option value="1">MOD_SELLACIOUS_FINDER_STORE_PAGE</option>
					<option value="2">MOD_SELLACIOUS_FINDER_PRODUCTS_PAGE</option>
				</field>

				<field
					name="show_sellers_image"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_SELLERS_IMAGE_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_SELLERS_IMAGE_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="spacer1"
					type="spacer"
					label="&lt;hr/&gt; &lt;b&gt;Product Options&lt;/b&gt;"
				/>

				<field
					name="show_product_image"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_PRODUCT_IMAGE_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_PRODUCT_IMAGE_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="show_product_category"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_PRODUCT_CATEGORY_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_PRODUCT_CATEGORY_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="show_product_price"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_FINDER_SHOW_PRODUCT_PRICE_LABEL"
					description="MOD_SELLACIOUS_FINDER_SHOW_PRODUCT_PRICE_DESC"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="order_spacer"
					type="spacer"
					label="&lt;hr/&gt; &lt;b&gt;Ordering Options&lt;/b&gt;"
				/>

				<fields name="ordering">
					<field name="product"
				        type="number"
				        default="1"
				        min="1"
				        max="5"
				        label="MOD_SELLACIOUS_FINDER_PRODUCT_ORDER_LABEL"
				        description="MOD_SELLACIOUS_FINDER_PRODUCT_ORDER_DESC"
					/>

					<field name="category"
				        type="number"
				        default="2"
			            min="1"
			            max="5"
				        label="MOD_SELLACIOUS_FINDER_CATEGORY_ORDER_LABEL"
				        description="MOD_SELLACIOUS_FINDER_CATEGORY_ORDER_DESC"
					/>

					<field name="seller"
				        type="number"
				        default="3"
				        min="1"
			            max="5"
				        label="MOD_SELLACIOUS_FINDER_SELLER_ORDER_LABEL"
				        description="MOD_SELLACIOUS_FINDER_SELLER_ORDER_DESC"
					/>

					<field name="categories"
				        type="number"
				        default="4"
				        min="1"
			            max="5"
				        label="MOD_SELLACIOUS_FINDER_CATEGORIES_ORDER_LABEL"
				        description="MOD_SELLACIOUS_FINDER_CATEGORIES_ORDER_DESC"
					/>

					<field name="sellers"
				        type="number"
				        default="5"
				        min="1"
			            max="5"
				        label="MOD_SELLACIOUS_FINDER_SELLERS_ORDER_LABEL"
				        description="MOD_SELLACIOUS_FINDER_SELLERS_ORDER_DESC"
					/>
				</fields>
			</fieldset>

			<fieldset name="advanced">

				<field name="moduleclass_sfx"
				       type="input" rows="3"
				       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

				<field name="cache"
				       type="list"
				       default="1"
				       label="COM_MODULES_FIELD_CACHING_LABEL"
				       description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field name="cache_time"
				       type="text"
				       default="900"
				       label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
				       description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>

				<field name="cachemode"
				       type="hidden"
				       default="static">
					<option value="static"></option>
				</field>

			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" name="Sellacious Updates - mod_sellacious_finder">http://sellacious.com/release/updates/v1.6/mod_sellacious_finder.xml</server>
	</updateservers>
</extension>
