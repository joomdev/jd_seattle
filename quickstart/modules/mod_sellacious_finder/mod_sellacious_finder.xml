<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>mod_sellacious_finder</name>
	<author>Izhar Aazmi</author>
	<creationDate>December 26, 2018</creationDate>
